@import anim

.lb
  position: absolute
  left: 0
  top: 20px
  width: 100px
  -webkit-user-select: none

.lb-topButtons, .lb-botButtons
  background: #777
  padding: 20px
  width: 185px

.lb-btn
  display: inline-block
  background-color: #999
  width: 80px
  height: 60px
  box-sizing: border-box
  padding: 16px
  font-size: 28px
  text-align: center

.lb-btn-five
  margin-left: 20px

.lb-column
  position: relative
  height: 500px
  width: 35px
  background: #111

.lb-health
  position: absolute
  left: 0
  bottom: 0
  width: 100%
  height: 50%
  background: #900
  -webkit-transition: height 0s $easeOutCubic

.lb-badge
  position: absolute
  left: 100%
  top: 0
  width: 100px
  height: 75px
  text-align: center
  font-size: 48px
  margin-top: -(@height / 2)
  padding-top: 11px
  box-sizing: border-box
  background: #999
  -webkit-transform: translate3d(0,0,0)
  -webkit-transition: -webkit-transform 0s $easeOutCubic

.lb-badge:before
  position: absolute
  right: 100%
  top: 50%
  margin-top: -10px
  content: ''
  width: 0
  height: 0
  border-right: 10px solid #999
  border-top: 10px solid transparent
  border-bottom: 10px solid transparent